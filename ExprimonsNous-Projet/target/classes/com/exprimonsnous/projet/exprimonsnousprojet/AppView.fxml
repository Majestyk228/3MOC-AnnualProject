<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.exprimonsnous.projet.exprimonsnousprojet.AppView">
   <children>
      <Text fill="RED" layoutX="215.0" layoutY="52.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Bienvenue!" textAlignment="CENTER">
         <font>
            <Font size="35.0" />
         </font>
      </Text>
      <AnchorPane fx:id="ListPane" layoutY="61.0" prefHeight="339.0" prefWidth="600.0">
         <children>
            <SplitMenuButton mnemonicParsing="false" text="Ajouter une liste">
              <items>
                <MenuItem fx:id="AddListButton" mnemonicParsing="false" onAction="#AddList" text="Ajouter une liste...">
                     <graphic>
                        <TextField fx:id="ListNameField" promptText="Saisissez le titre..." />
                     </graphic>
                  </MenuItem>
                <MenuItem fx:id="AddListCancel" mnemonicParsing="false" onAction="#CloseListMenu" text="Annuler" />
              </items>
            </SplitMenuButton>
         </children>
      </AnchorPane>
      <MenuButton layoutY="2.0" mnemonicParsing="false" text="Options">
        <items>
          <MenuItem fx:id="HomeButton" mnemonicParsing="false" onAction="#SwitchToHome" text="Acceuil" />
          <MenuItem fx:id="ExitButton" mnemonicParsing="false" onAction="#ExitApp" text="Quitter" />
        </items>
      </MenuButton>
   </children>
</AnchorPane>
