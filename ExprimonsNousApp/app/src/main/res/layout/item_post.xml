<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="10dp"
    android:orientation="vertical"
    android:layout_margin="4dp">

    <!--Partie 1 : Prénom nom du propriétaire du poste-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fullnameTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John DOE !"
            android:layout_margin="15dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            >
        </TextView>

    </LinearLayout>
    <!--Partie 2 : Le corps du poste-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bodyTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec pellentesque diam a est aliquet finibus. Cras gravida mi sit amet dui viverra rhoncus vitae fermentum urna. Aliquam sit amet mauris vitae leo egestas sollicitudin. Aenean id libero vel velit blandit vestibulum. Mauris sem eros, dictum ac nisl quis, sagittis lobortis."
            android:textSize="14sp"
            android:layout_margin="20dp"
            />
    </LinearLayout>


    <!--Partie 3 : Les likes/dislikes/commentaires/reward-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--inséré les réact et les chiffres-->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_happy"
            android:contentDescription="@string/logo_like_description" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/likesTXT"
            android:text="5"/>
        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_sad"
            android:contentDescription="@string/logo_dislike_description" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/dislikesTXT"
            android:text="66"/>
        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_chat_fill"
            android:visibility="gone"
            android:contentDescription="@string/logo_commentaire_description" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/commentTXT"
            android:text="0464"
            android:visibility="gone"/>
        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_dimond_alt_light"
            android:visibility="gone"
            android:contentDescription="@string/logo_r_compenses_description" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/rewardTXT"
            android:text="5"
            android:visibility="gone"/>
    </LinearLayout>

    <!--Partie 4 : Les boutons Like/Dislike/Comment/Reward-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/likeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:backgroundTint="@color/medium_grey"
            android:text="@string/like"
            android:textColor="@color/black"
            android:textSize="7sp"
            app:strokeColor="@color/medium_stroke_grey"
            app:strokeWidth="1dp"/>
        <Button
            android:id="@+id/dislikeBtn"
            android:backgroundTint="@color/medium_grey"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/dislike"
            android:textSize="7sp"
            app:strokeColor="@color/medium_stroke_grey"
            app:strokeWidth="1dp"/>
        <Button
            android:id="@+id/commentBtn"
            android:backgroundTint="@color/medium_grey"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/commentaires_string"
            android:textSize="7sp"
            app:strokeColor="@color/medium_stroke_grey"
            app:strokeWidth="1dp"/>
        <Button
            android:id="@+id/rewardBtn"
            android:backgroundTint="@color/medium_grey"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/recompenses_string"
            android:textSize="7sp"
            app:strokeColor="@color/medium_stroke_grey"
            app:strokeWidth="1dp"/>
    </LinearLayout>

</LinearLayout>