<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundBlue"
        tools:context=".MainActivity">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/logo"
            android:layout_margin="20dp"
            android:src="@drawable/logoexprimonsnous2"
            android:layout_centerHorizontal="true"
            />

        <RelativeLayout
            android:id="@+id/whiteRoundedLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_alignParentBottom="true"
            android:background="@drawable/layout_bg">


            <TextView
                android:id="@+id/RejoignezNous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/quicksandsemibold"
                android:gravity="center"
                android:text="Rejoignez-nous !"
                android:textColor="@color/black"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/signInDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/RejoignezNous"
                android:layout_margin="30dp"
                android:fontFamily="@font/quicksandregular"
                android:gravity="center"
                android:text="@string/sign_in_desc"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/firstNameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/signInDescription"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/quicksandsemibold"
                android:text="@string/firstnameTXT"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/firstNameLabel"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="#60123456"
                android:drawablePadding="20dp"
                android:fontFamily="@font/quicksandregular"
                android:hint="@string/firstnameHint"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/lastNameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/firstname"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/quicksandsemibold"
                android:text="@string/lastnameTXT"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lastNameLabel"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="#60123456"
                android:drawablePadding="20dp"
                android:fontFamily="@font/quicksandregular"
                android:hint="@string/lastnameHint"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/bithdayLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lastname"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/quicksandsemibold"
                android:text="@string/birthdateTXT"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/bithdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bithdayLabel"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="#60123456"
                android:drawablePadding="20dp"
                android:fontFamily="@font/quicksandregular"
                android:hint="@string/birthdateHint"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/emailLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bithdate"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/quicksandsemibold"
                android:text="@string/emailTXT"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/emailLabel"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="#60123456"
                android:drawablePadding="20dp"
                android:fontFamily="@font/quicksandregular"
                android:hint="@string/emailHint"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/genderLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/quicksandsemibold"
                android:text="@string/genderTXT"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/gender_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/genderLabel"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/edittext_background"
                android:backgroundTint="@color/edittext_background"
                android:foregroundTint="#FFFFFF" />

            <EditText
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gender_spinner"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="#60123456"
                android:drawablePadding="20dp"
                android:fontFamily="@font/quicksandregular"
                android:hint="@string/genderHint"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/areaCodeLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gender"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/quicksandsemibold"
                android:text="@string/areaCodeTXT"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/areaCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/areaCodeLabel"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="#60123456"
                android:drawablePadding="20dp"
                android:fontFamily="@font/quicksandregular"
                android:hint="@string/areaCodeHint"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/passwdLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/areaCode"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/quicksandsemibold"
                android:text="@string/passwdTXT"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/passwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/passwdLabel"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="#60123456"
                android:drawablePadding="20dp"
                android:fontFamily="@font/quicksandregular"
                android:hint="@string/passwdHint"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16dp"
                android:textStyle="italic" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/signInBtn"
                android:layout_width="320dp"
                android:layout_height="75dp"
                android:layout_below="@id/passwd"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:backgroundTint="@color/blueBtn"
                android:fontFamily="@font/quicksandbold"
                android:gravity="center"
                android:text="@string/login"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>