<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBlue"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/logo"
        android:layout_margin="20dp"
        android:src="@drawable/logoexprimonsnous2"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:id="@+id/whiteRoundedLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_alignParentBottom="true"
        android:background="@layout/layout_bg">

        <TextView
            android:id="@+id/selectCommuneTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/quicksandsemibold"
            android:gravity="center"
            android:text="@string/communeTitle"
            android:textColor="@color/black"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/communeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectCommuneTitle"
            android:layout_margin="30dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/quicksandregular"
            android:gravity="center"
            android:text="@string/communeDesc"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/communeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/communeDescription"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/quicksandsemibold"
            android:text="@string/communeTXT"
            android:textColor="@color/black" />

        <!--ADD SELECTOR HERE-->
        <Spinner
            android:id="@+id/communeSelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/communeLabel"
            android:background="#60123456"
            android:hapticFeedbackEnabled="true" />
        <!--ADD SELECTOR HERE-->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextBtn1"
            android:layout_width="320dp"
            android:layout_height="75dp"
            android:layout_below="@id/communeSelector"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/blueBtn"
            android:fontFamily="@font/quicksandbold"
            android:gravity="center"
            android:text="@string/next"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/skipBtn1"
            android:layout_width="320dp"
            android:layout_height="75dp"
            android:layout_below="@id/nextBtn1"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/lightBlueBtn"
            android:fontFamily="@font/quicksandbold"
            android:gravity="center"
            android:text="@string/skip"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>